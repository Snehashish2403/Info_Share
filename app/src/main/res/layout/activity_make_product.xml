<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MakeProduct">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill the details"
        android:fontFamily="@font/maven_pro_bold"
        android:textSize="18sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ET_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Item Name"
        android:focusableInTouchMode="true">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemNameET"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ET_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Description"
        android:focusableInTouchMode="true">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemDescpET"
            android:layout_width="match_parent"
            android:maxLength="200"
            android:maxLines="7"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ET_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Price"
        android:focusableInTouchMode="true">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemPriceTV"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
<ImageView
    android:id="@+id/selectImageIV"
    android:layout_marginTop="40dp"
    android:layout_gravity="end"
    android:layout_width="wrap_content"
    android:src="@drawable/item_image_icon"
    android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/item_displayIV"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="250dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Save"
        android:backgroundTint="@color/colorPrimaryDark"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</LinearLayout>
</RelativeLayout>