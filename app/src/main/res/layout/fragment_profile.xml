<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="200dp"
                app:cardCornerRadius="20dp"
                android:padding="6dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profileIV"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/user_profileNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:text="User_Name"
                        android:fontFamily="@font/maven_pro_bold"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:paddingStart="35dp"
                        android:paddingEnd="68dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/user_phone"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/user_profileNumberTV"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="+919735367221 "/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:paddingStart="35dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/user_email"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/user_profileEmailTV"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="textStart"
                            android:text="easyExchange@gmail.com"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/logOutButton"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button2"
                android:text="Log Out"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>